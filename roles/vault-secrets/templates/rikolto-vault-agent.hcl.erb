exit_after_auth = false,
pid_file = "/run/vault/<%= @title %>_vault-agent.pid"
vault {
  address = "<%= @vault_addr %>"
  retry {
  num_retries = 5
  }
}
auto_auth {
  method {
  type = "approle"
  mount_path = "auth/approle"
    config = {
      role_id_file_path = "<%= @approle_id_file %>"
      secret_id_file_path = "<%= @approle_secret_file %>"
      remove_secret_id_file_after_reading = false
    }
  }
  sink "file" {
    config = {
      path = "<%= @sink_file %>"
    }
  }
}
template_config {
  static_secret_render_interval = "57m"
}
template {
  source = "/opt/vault/templates/gcpdocker.tpl"
  destination = "/home/svw/rikolto_supervisor/secrets/gcr_key.json"
  perms = "0620"
}

template {
  source = "/opt/vault/templates/balenatoken.tpl"
  destination = "/home/svw/rikolto_supervisor/secrets/balena_api_key"
  perms = "0620"
}

